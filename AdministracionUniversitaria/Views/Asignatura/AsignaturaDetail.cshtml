@model AdministracionUniversitaria.ViewModels.AsignaturaViewModel

@{
    ViewBag.Title = "Editar Asignatura";
}

<div class="container d-flex justify-content-center">
    <div class="row">
        <div class="col-12">
            @using (Html.BeginForm("UpdateAsignatura", "Asignatura", new { IdAsignatura = Model.Asignatura_IdAsignatura }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Asignatura_IdAsignatura)

                <div class="row">
                    <!-- Nombre de la Asignatura -->
                    <div class="form-group mb-4 col-6">
                        @Html.LabelFor(model => model.Asignatura_Nombre, "Nombre de la Asignatura", new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.Asignatura_Nombre, new { @class = "form-control", @id = "txtAsignaturaNombre", @type = "text", placeholder = "Escriba el nombre de la asignatura" })
                        @Html.ValidationMessageFor(model => model.Asignatura_Nombre, "", new { @class = "text-danger" })
                    </div>

                    <!-- Créditos -->
                    <div class="form-group mb-4 col-6">
                        @Html.LabelFor(model => model.Asignatura_Creditos, "Créditos", new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.Asignatura_Creditos, new { @class = "form-control", @id = "txtAsignaturaCreditos", @type = "number", placeholder = "Número de créditos" })
                        @Html.ValidationMessageFor(model => model.Asignatura_Creditos, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    <!-- Código -->
                    <div class="form-group mb-4 col-6">
                        @Html.LabelFor(model => model.Asignatura_Codigo, "Código", new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.Asignatura_Codigo, new { @class = "form-control", @id = "txtAsignaturaCodigo", @type = "text", placeholder = "Código de la asignatura" })
                        @Html.ValidationMessageFor(model => model.Asignatura_Codigo, "", new { @class = "text-danger" })
                    </div>

                    <!-- Tipo -->
                    <div class="form-group mb-4 col-6">
                        @Html.LabelFor(model => model.Asignatura_Tipo, "Tipo", new { @class = "form-label" })
                        @Html.DropDownListFor(model => model.Asignatura_Tipo, new SelectList(new List<string> { "Obligatoria", "Electiva", "Optativa" }), "Seleccione el tipo de asignatura", new { @class = "form-select", @id = "ddlAsignaturaTipo" })
                        @Html.ValidationMessageFor(model => model.Asignatura_Tipo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    <!-- Curso -->
                    <div class="form-group mb-4 col-6">
                        @Html.LabelFor(model => model.Asignatura_Curso, "Curso", new { @class = "form-label" })
                        @Html.DropDownListFor(model => model.Asignatura_Curso, new SelectList(new List<string> { "1er Año", "2do Año", "3er Año", "4to Año" }), "Seleccione el curso", new { @class = "form-select", @id = "ddlAsignaturaCurso" })
                        @Html.ValidationMessageFor(model => model.Asignatura_Curso, "", new { @class = "text-danger" })
                    </div>

                    <!-- Horario -->
                    <div class="form-group mb-3 col-6">
                        @Html.LabelFor(model => model.Asignatura_Horario, "Horario", new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.Asignatura_Horario, new { @class = "form-control", @id = "txtAsignaturaHorario", @type = "text", placeholder = "Horario de la asignatura" })
                        @Html.ValidationMessageFor(model => model.Asignatura_Horario, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    <!-- Carrera -->
                    <div class="form-group mb-4 col-6">
                        @Html.LabelFor(model => model.IdCarrera, "Carrera", new { @class = "form-label" })
                        @Html.DropDownListFor(model => model.IdCarrera, new SelectList(Model.Carreras, "Value", "Text"), "Seleccione una carrera", new { @class = "form-select", @id = "ddlCarrera" })
                        @Html.ValidationMessageFor(model => model.IdCarrera, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Botón de Enviar -->
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-save"></i> Guardar
                    </button>
                </div>
            }
        </div>
    </div>
</div>
