<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Universidad de la Vida</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .body-content {
            flex: 1;
        }                                                                                                                                                                                                   

        footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            background-color: #f8f9fa;
            text-align: center;
            padding: 10px 0;
        }
    </style>
    
</head>
<body>
    @if (Session["TipoUsuario"] != null)
    {
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-primary">
            <div class="container">
                @Html.ActionLink("Universidad de la Vida", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Alternar navegación" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 text-white">
                        <li>@Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "nav-link text-white" })</li>
                        <li>@Html.ActionLink("Alumnos", "AlumnosPage", "Alumno", new { area = "" }, new { @class = "nav-link text-white" })</li>
                        <li>@Html.ActionLink("Matriculaciones", "MatriculacionesPage", "Matriculacion", new { area = "" }, new { @class = "nav-link text-white" })</li>
                        <li>@Html.ActionLink("Carreras", "CarrerasPage", "Carrera", new { area = "" }, new { @class = "nav-link text-white" })</li>
                        <li>@Html.ActionLink("Asignaturas", "AsignaturasPage", "Asignatura", new { area = "" }, new { @class = "nav-link text-white" })</li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (Session["TipoUsuario"] != null)
                        {
                            <li>
                                @using (Html.BeginForm("Logout", "Administracion", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken() //Evitar ataques CSRF
                                    <button type="submit" class="btn btn-link text-white">Cerrar sesión</button>
                                }

                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    }
    <div class="container body-content">
        @RenderBody()
    </div>
    <footer class="bg-body-tertiary text-center fixed-bottom">
       <!-- Grid container -->
       <div class="container p-4"></div>
       <!-- Grid container -->
       <!-- Copyright -->
       <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.05);">
           © 2024 Copyright:
           <a class="text-body" href="https://mdbootstrap.com/">Universidad de la Vida</a>
       </div>
       <!-- Copyright -->
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
